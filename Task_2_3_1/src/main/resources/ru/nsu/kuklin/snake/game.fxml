<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import ru.nsu.kuklin.snake.ResizableCanvas?>
<HBox minHeight="600" minWidth="900" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nsu.kuklin.snake.GameView">
    <ResizableCanvas HBox.hgrow="ALWAYS" fx:id="canvas"/>
    <VBox>
        <HBox.margin>
            <Insets>
                <left>10</left>
                <right>10</right>
            </Insets>
        </HBox.margin>
        <Label fx:id="score">
            <VBox.margin>
                <Insets>
                    <top>10</top>
                </Insets>
            </VBox.margin>
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <Label fx:id="speed">
            <VBox.margin>
                <Insets>
                    <top>10</top>
                </Insets>
            </VBox.margin>
            <font>
                <Font size="30.0" />
            </font>
        </Label>
    </VBox>
</HBox>